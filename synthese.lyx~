\end_layout

\begin_layout Plain Layout

\emph on
B = 
\begin_inset Quotes eld
\end_inset

Je vais étudier math.
\begin_inset Quotes erd
\end_inset

 
\emph default
et C =
\emph on
 
\emph default

\begin_inset Quotes eld
\end_inset


\emph on
