\begin_layout Part
Logiques et preuves
\end_layout

\begin_layout Section
Logique propositionnelle
\end_layout

\begin_layout Subsection
Propositions
\end_layout

\begin_layout Definition
Proposition : phrase déclarative qui est soit vraie, soit fausse.
\end_layout

\begin_layout Definition
La proposition qui est toujours vraie se note T, celle qui est toujours
 fausse se note F.
\end_layout

\begin_layout Subsection
Connecteurs
\end_layout

\begin_layout Standard
Il y a moyen de composer des propositions grâce aux opérateurs :
\end_layout

\begin_layout Itemize
¬ (négation) ;
\end_layout

\begin_layout Itemize
\begin_inset Formula $\wedge$
\end_inset

 (conjonction) ;
\end_layout

\begin_layout Itemize
\begin_inset Formula $\vee$
\end_inset

 (disjonction) ;
\end_layout

\begin_layout Itemize
→ (implication) : p → q se lit 
\begin_inset Quotes eld
\end_inset

si p, alors q
\begin_inset Quotes erd
\end_inset

 ;
\end_layout

\begin_layout Itemize
↔ (biconditionnelle) : p ↔ p se lit 
\begin_inset Quotes eld
\end_inset

p si et seulement si q
\begin_inset Quotes erd
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
Une condition nécessaire quand p est q ;
\end_layout

\begin_layout Itemize
Une condition suffisante pour q est p.
\end_layout

\end_deeper
\begin_layout Subsection
Tables de vérité
\end_layout

\begin_layout Standard
Les tables de vérité se composent de :
\end_layout

\begin_layout Itemize
lignes qui représentent chaque possibilité de combinaison de valeurs pour
 les propositions atomiques ;
\end_layout

\begin_layout Itemize
colonnes qui représentent la valeur de vérité de chaque proposition atomique,
 puis la valeur de la proposition composée.
\end_layout

